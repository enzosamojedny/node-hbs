<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script defer src="/static/js/login.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="/static/css/login.css" />
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-l5Fw8l1s8tf0+gaRb4e+Hg19J2XiNXGRdPQbVRzSLKKfktwumX2YIrJ5NCjI8Z/Q"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"
    ></script>
  </head>
  <body>
    <div class="login-wrapper">
      <div class="form-container bg-dark">
        <h2 class="mb-4 text-white">Login</h2>
        <form class="form-login-wrapper">
          <div class="form-group">
            <label for="first-name">Username</label>
            <input
              type="text"
              class="form-control"
              id="user-name"
              placeholder="Enter your username"
              required
            />
          </div>
          <div class="form-group">
            <label for="login-password">Password</label>
            <input
              type="text"
              class="form-control"
              id="login-password"
              placeholder="Enter your password"
              required
            />
          </div>
          <button
            type="submit"
            id="login-btn"
            class="btn btn-primary text-black bg-white"
          >Login</button>

        </form>
        <button type="button" class="btn btn-link"><a
            href="/resetpassword"
          >Reset my password</a></button>
        <button type="button" class="btn btn-link"><a href="/register">New user?
            Register here</a></button>

        <div class="wrapper">

          <a
            data-mdb-ripple-init
            class="icon github btn btn-link btn-floating btn-lg text-light m-1 alternative-logins"
            href="/api/github"
            role="button"
            data-mdb-ripple-color="dark"
          >
            <div class="tooltip">GitHub</div>
            <span><i class="fab fa-github"></i></span>
          </a>

          <a
            data-mdb-ripple-init
            class="icon google btn btn-link btn-floating btn-lg text-light m-1 alternative-logins"
            href="/api/google"
            role="button"
            data-mdb-ripple-color="dark"
          >
            <div class="tooltip">Google</div>
            <span><i class="fab fa-google"></i></span>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>