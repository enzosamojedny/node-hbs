<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script defer type="module" src="/static/js/script.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <title>Real Time Products</title>
  </head>
  <body>
    <h1>Handlebars Products</h1>

    <input type="text" id="productInput" placeholder="Enter something.." />
    <button id="productButton">Send</button>
    <ul id="productList">
      {{#each products}}
        <li>
          <strong>Title:</strong>
          {{title}}<br />
          <strong>Description:</strong>
          {{description}}<br />
          <strong>Code:</strong>
          {{code}}<br />
          <strong>Price:</strong>
          ${{price}}<br />
          <strong>Status:</strong>
          {{#if status}}Available{{else}}Not Available{{/if}}<br />
          <strong>Stock:</strong>
          {{stock}}<br />
          <strong>Category:</strong>
          {{category}}<br />
          <strong>Thumbnail:</strong>
          {{thumbnail}}<br />
        </li>
      {{/each}}
    </ul>
    {{debug}}
  </body>
</html>